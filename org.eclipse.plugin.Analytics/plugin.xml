<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipse.plugin.analytics.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Analytics Perspective"
            class="org.eclipse.plugin.analytics.Perspective"
            id="org.eclipse.plugin.Analytics.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="WWAnalyticsPlugin"
            name="Analytics">
      </category>
         
      <view
      		category="WWAnalyticsPlugin"
            name="VisAD SpreadSheet for Numerical Analysis"
            icon="icons/window_16.gif"
            class="org.eclipse.plugin.analytics.views.VisADSpreadSheetView"
            id="org.eclipse.plugin.analytics.views.VisADSpreadSheetView">
      </view>
      <view
      		category="WWAnalyticsPlugin"
            name="Models-3/Community Multiscale Air Quality (CMAQ)"
            icon="icons/epa_16.png"
            class="org.eclipse.plugin.analytics.views.VerdiModels3View"
            id="org.eclipse.plugin.analytics.views.VerdiModels3View">
      </view>
   </extension>
